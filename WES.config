params {
    genome = '/hpc/diaggen/data/databases/ref_genomes/Homo_sapiens.GRCh37.GATK.illumina/Homo_sapiens.GRCh37.GATK.illumina.fasta'

    gatk_path = '/hpc/local/CentOS7/cog_bioinf/GenomeAnalysisTK-3.8-1-0-gf15c1c3ef/GenomeAnalysisTK.jar'
    gatk_rtc_options = '--known /hpc/diaggen/data/databases/GATK_resource_bundle/b37/1000G_phase1.indels.b37.vcf.gz --known /hpc/diaggen/data/databases/GATK_resource_bundle/b37/Mills_and_1000G_gold_standard.indels.b37.vcf.gz'
    gatk_hc_options = '-stand_call_conf 10 --intervals /hpc/diaggen/software/production/Dx_tracks/Tracks/ENSEMBL_UCSC_merged_collapsed_sorted_v3_CREv2_100bpflank.list --dbsnp /hpc/diaggen/data/databases/GATK_resource_bundle/b37/dbsnp_137.b37.vcf.gz'

    picard_bait = '/hpc/diaggen/software/production/Dx_tracks/Tracks/SureSelect_CREv2_elidS30409818_Covered.list'
    picard_target = '/hpc/diaggen/software/production/Dx_tracks/Tracks/ENSEMBL_UCSC_merged_collapsed_sorted_v3_20bpflank.list'
}

process {
    errorStrategy = 'finish'

    withLabel: FASTQC_0_11_8 {
        cpus = 2
        memory = '1G'
        time = '1h'

        publishDir {
            path = "$params.outdir/QC/FastQC"
            mode = 'copy'
        }
    }

    withLabel: BWA_0_7_17_MEM {
        cpus = 10
        memory = '32G'
        time = '2h'
    }

    withLabel: Sambamba_0_7_0_ViewSort {
        cpus = 10
        memory = '32G'
        time = '2h'
        clusterOptions = '--gres=tmpspace:10G'
    }

    withLabel: Sambamba_0_7_0_MarkdupMerge {
        cpus = 10
        memory = '32G'
        time = '2h'
        clusterOptions = '--gres=tmpspace:10G'

        publishDir {
            path = "$params.outdir/mapping"
            mode = 'copy'
        }
    }

    withLabel: GATK_3_8_1_0_gf15c1c3ef_RealignerTargetCreator {
        cpus = 2
        memory = '4G'
        time = '8h'
    }

    withLabel: GATK_3_8_1_0_gf15c1c3ef_IndelRealigner {
        cpus = 2
        memory = '4G'
        time = '8h'
    }

    withLabel: Sambamba_0_7_0_Merge {
        cpus = 10
        memory = '32G'
        time = '2h'
        clusterOptions = '--gres=tmpspace:10G'

        publishDir {
            path = "$params.outdir/mapping"
            mode = 'copy'
        }
    }

    withLabel: GATK_3_8_1_0_gf15c1c3ef_HaplotypeCaller {
        cpus = 2
        memory = '32G'
        time = '24h'

        publishDir {
            path = "$params.outdir"
            mode = 'copy'
        }
    }

    withLabel: Samtools_1_10_Flagstat {
        cpus = 4
        memory = '32G'
        time = '2h'

        publishDir {
            path = "$params.outdir/QC/Flagstat"
            mode = 'copy'
        }
    }

    withLabel: PICARD_2_22_0 {
        cpus = 4
        memory = '8G'
        time = '12h'
        clusterOptions = '--gres=tmpspace:10G'

        publishDir {
            path = "$params.outdir/QC/Picard"
            mode = 'copy'
        }
    }

    withLabel: MultiQC_1_8 {
        cpus = 1
        memory = '1G'
        time = '5m'

        publishDir {
            path = "$params.outdir/QC"
            mode = 'copy'
        }
    }
}

report {
    enabled = true
    file = "$params.outdir/log/nextflow_report.html"
}

trace {
    enabled = true
    file = "$params.outdir/log/nextflow_trace.txt"
    fields = 'task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem,peak_rss,peak_vmem,rchar,wchar,syscr,syscw,read_bytes,write_bytes,vol_ctxt,inv_ctxt'
}

timeline {
    enabled = true
    file = "$params.outdir/log/nextflow_timeline.html"
}

profiles {

    sge {
        process {
            executor = 'sge'
            queue = 'all.q'
            clusterOptions = '-P diaggen'
            errorStrategy = 'finish'
        }

        singularity {
            enabled = true
            runOptions = '-B /hpc:/hpc -B $TMPDIR:$TMPDIR'
            autoMounts = true
        }
    }

    slurm {
        process {
            executor = 'slurm'
            queue = 'cpu'
            errorStrategy = 'finish'
        }

        singularity {
            enabled = true
            runOptions = '-B /hpc:/hpc -B $TMPDIR:$TMPDIR'
            autoMounts = true
            cacheDir = '/hpc/diaggen/projects/workflow/singularity_cache'
        }
    }

    mac {
        docker.enabled = true
        docker.runOptions = '-v /Users:/Users'
        process.errorStrategy = 'finish'
    }
}
