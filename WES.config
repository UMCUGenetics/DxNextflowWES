            [path: "$params.outdir/exomedepth/UMCU", mode: 'link', pattern: 'UMCU*.vcf'],
            [path: "$params.outdir/exomedepth/HC", mode: 'link', pattern: 'HC*.vcf'],
            [path: "$params.outdir/exomedepth/logs", mode: 'link', pattern: '*.log'],
