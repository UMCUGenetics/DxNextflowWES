params {
    genome = '/hpc/diaggen/data/databases/ref_genomes/Homo_sapiens.GRCh37.GATK.illumina/Homo_sapiens.GRCh37.GATK.illumina.fasta'

    mips_trim_dedup_path = '/hpc/diaggen/software/production/mips/mips_trim_dedup.py'
    mips_design_file = '/hpc/diaggen/software/production/Dx_tracks/fingerprint/81_snp_mips_design.txt'
    mips_uuid_length = 8
    mips_uuid_read = 'R1'

    gatk_path = '/hpc/local/CentOS7/cog_bioinf/GenomeAnalysisTK-3.8-1-0-gf15c1c3ef/GenomeAnalysisTK.jar'
    fingerprint_target = '/hpc/diaggen/software/production/Dx_tracks/fingerprint/81SNP_design.vcf'
    gatk_unified_genotyper_optional = ''
}

process {
    errorStrategy = 'finish'

    withLabel: 'FASTQC_0_11_8' {
        cpus = 2
        memory = '1G'
        time = '5m'

        publishDir {
            path = "$params.outdir/QC/FastQC"
            mode = 'copy'
        }
    }

    withLabel: 'MultiQC_1_8' {
        cpus = 2
        memory = '1G'
        time = '5m'
        penv = 'threaded'

        publishDir {
            path = "$params.outdir/QC"
            mode = 'copy'
        }
    }

    withLabel: 'MIPS_1_0_1_TrimDedup' {
        cpus = 2
        memory = '1G'
        time = '10m'

        publishDir {
            path = "$params.outdir/fastqs"
            mode = 'copy'
        }
    }

    withLabel: 'BWA_0_7_17_MEM' {
        cpus = 2
        memory = '10G'
        time = '5m'
        penv = 'threaded'
    }

    withLabel: 'Sambamba_0_7_0' {
        cpus = 2
        memory = '1G'
        time = '5m'

        publishDir {
            path = "$params.outdir/mapping"
            mode = 'copy'
        }
    }

    withLabel: 'GATK_3_8_1_0_gf15c1c3ef_UnifiedGenotyper' {
        cpus = 2
        memory = '5G'
        time = '5m'

        publishDir {
            path = "$params.outdir/fingerprint"
            mode = 'copy'
        }
    }

}

report {
    enabled = true
    file = "$params.outdir/log/nextflow_report.html"
}

trace {
    enabled = true
    file = "$params.outdir/log/nextflow_trace.txt"
    fields = 'task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem,peak_rss,peak_vmem,rchar,wchar,syscr,syscw,read_bytes,write_bytes,vol_ctxt,inv_ctxt'
}

timeline {
    enabled = true
    file = "$params.outdir/log/nextflow_timeline.html"
}

profiles {

    slurm {
        process {
            executor = 'slurm'
            queue = 'cpu'
            errorStrategy = 'finish'
        }

        singularity {
            enabled = true
            runOptions = '-B /hpc:/hpc -B $TMPDIR:$TMPDIR'
            autoMounts = true
            cacheDir = '/hpc/diaggen/software/singularity_cache'
        }

        executor {
            queueSize = 1000
        }
    }

    mac {
        docker.enabled = true
        docker.runOptions = '-v /Users:/Users'
        process.errorStrategy = 'finish'
    }
}
